{
  "query_template": "",
  "knowledge_globs": [
    "knowledge/*.md",
    "knowledge/*.pdf",
    "knowledge/*.csv"
  ],
  "output_dir": "output",
  "llm": {
    "model": "gpt-5"
  },
  "embedding": {
    "model": "bge-m3",
    "chunking_strategy": "recursive",
    "enable_query_rewrite": false,
    "rewrite_num_queries": 3
  },
  "vector_store": {
    "backend": "faiss",
    "index_factory": "Flat",
    "path": "data/faiss.index",
    "meta_path": "data/faiss.meta.json"
  },
  "conversation_logging": {
    "enabled": true,
    "backend": "sqlite",
    "db_path": "data/sessions.db",
    "session_id": "default",
    "max_history": 5
  },
  "tui": {
    "enabled": false
  },
  "intent_router": {
    "enabled": true
  },
  "knowledge": {
    "enabled": true
  }
}
